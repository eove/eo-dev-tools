{
  "name": "@eove/dev-tools",
  "version": "1.0.0",
  "description": "Collection of development scripts/tools for Eove projects",
  "main": "index.js",
  "bin": {
    "eo-dev-tools": "./bin/eo-dev-tools.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "ts-node ./lib/cli/main",
    "lint": "eslint . --fix --ext .ts",
    "jest": "jest --verbose",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts,yml}'",
    "compile": "tsc",
    "test": "run-s -c compile jest lint",
    "prebuild": "rimraf build",
    "build": "tsc -p tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "EOVE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eove/eo-dev-tools"
  },
  "dependencies": {
    "@arpinum/log": "^5.3.3",
    "yargs": "17.3.1"
  },
  "devDependencies": {
    "@eove/eslint-config-typescript": "^1.6.0",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@types/yargs": "17.0.8",
    "eslint": "8.6.0",
    "jest": "27.4.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
